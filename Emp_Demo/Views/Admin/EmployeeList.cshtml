@model IEnumerable<Emp_Demo.Models.Employeeinfo>

@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6 {
        margin-top: 15px;
        margin-bottom: .5rem;
        margin-left: 0;
    }
    .table table-striped {
        display: table
    }

    .container {
        width: 100% !important;
        max-width: 100% !important;
        padding-top: 1rem !important;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<h2>EmployeeList</h2>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Employeename</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
            <th scope="col">Address</th>
            <th scope="col">Designation</th>
            <th scope="col">Department</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            int index = 1;
            foreach (var item in Model)
            {
             <tr>
                 <th scope="row">@index</th>
                 <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                 <td>@Html.DisplayFor(modelItem => item.Email)</td>
                 <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                 <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.Userlogin.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Userlogin.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.Userlogin.Role)</td>
                <td>
                    @Html.ActionLink(" ", "EditEmployee", new { id = item.EmployeeId }, new { @class = "bi bi-pen-fill", style = "text-decoration: none;" })
                    |
                    @Html.ActionLink(" ", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "bi bi-trash-fill delete-link", id = "deleteLink" })
               </td>
             </tr>
                index++;
            }
        }
    </tbody>
</table>
