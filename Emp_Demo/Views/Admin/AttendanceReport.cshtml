@model IEnumerable<Emp_Demo.Models.Attendance>
@{
    ViewBag.Title = "AttendanceReport";
    string employeeName = ViewBag.SelectedEmployeeName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@if (ViewBag.Message != null)
{

    <p class="alert alert-success" role="alert">
        @ViewBag.Message
    </p>
}
<style>


    .table table-striped {
        display: table
    }

    .container {
        width: 100% !important;
        max-width: 100% !important;
        padding-top: 1rem !important;
    }

    .modal-backdrop {
        /* Override default backdrop styling */
        opacity: 0 !important; /* Set opacity to 0 to disable fading */
        display: none !important; /* Hide the backdrop */
    }
</style>
<nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">

        <a class="navbar-brand mr-auto"> Employee Attendance Report </a>
    </div>
</nav>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

@using (Html.BeginForm("AttendanceReport", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("EmployeeName", "Select Employee:")
        @Html.DropDownList("employeeId", ViewBag.employeeList as List<SelectListItem>, "Select ", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-dark">Generate Report</button>
}

@if (ViewBag.SelectedEmployeeName != null && Model != null && Model.Any())
{
    <h3>Attendance Records for @ViewBag.SelectedEmployeeName</h3>
    <table class="table table-striped">
        <thead>
            <tr>

                <th>Employee Name</th>
                <th>Attendance Date</th>
                <th>Attendance Time </th>
                <th>Entry Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Employeeinfo.EmployeeName)

                    </td>
                    <td>

                        @item.AttendanceDate.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @item.Timestamp.ToString("HH:mm:ss tt")

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryType)
                    </td>

                    <td>
                        @Html.ActionLink(" ", "EditAttendance", new { id = item.AttendanceId }, new { @class = "bi bi-pen-fill", style = "text-decoration: none;" })

                        |
                        @*<a href="#" class="bi bi-trash-fill delete-link" data-id="@item.AttendanceId"></a>

        @Html.ActionLink(" ", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "bi bi-trash-fill delete-link", id = $"deleteLink-{item.EmployeeId}", data_toggle = "modal", data_target = "#deleteModal" })*@
                        @*@Html.ActionLink(" ", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "bi bi-trash-fill delete-link", id = $"deleteLink-{item.EmployeeId}", data_toggle = "modal", data_target = "#deleteModal", data_id = item.AttendanceId })*@
                        @Html.ActionLink(" ", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "bi bi-trash-fill delete-link", id = $"deleteLink-{item.EmployeeId}", data_toggle = "modal", data_target = "#deleteModal", data_id = item.AttendanceId })
                    </td>


                </tr>

            }
        </tbody>
    </table>

}
else if (ViewBag.SelectedEmployeeName != null)
{
    <h3>No attendance records found for </h3>

}
<button type="button" class="btn btn-dark">
    @Html.ActionLink("Back to Admin Dashboard", "AdminDashboard", null, new { @style = "color: white;" })
</button>


<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Attendance Record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var deleteUrl;
            var deleteId;

            $('.delete-link').click(function(e) {
                e.preventDefault();
                deleteUrl = $(this).attr("href");
                deleteId = $(this).data('id');
                $("#deleteModal").modal("show");
            });

            $('#confirmDelete').click(function() {
                $.ajax({
                    url: '@Url.Action("DeleteAttendance", "Admin")/' + deleteId,
                    type: 'GET',
                    success: function(response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("AttendanceReport", "Admin")' + '?employeeId=' + response.employeeId + '&message=' + encodeURIComponent('@TempData["message"]');
                        } else {
                            alert('Error occurred while deleting the attendance.');
                        }
                    },
                    error: function(xhr, status, error) {
                        alert("An error occurred: " + xhr.responseText);
                    }
                });

                // Close the modal after handling the request
                $("#deleteModal").modal("hide");
            });
        });
    </script>
}

