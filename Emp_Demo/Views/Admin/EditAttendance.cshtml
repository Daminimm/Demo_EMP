
@model Emp_Demo.Models.Attendance

@{
    ViewBag.Title = "Edit Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Attendance</h2>

@using (Html.BeginForm("EditAttendance", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AttendanceId)
    @Html.HiddenFor(model => model.EmployeeId)

    <div class="form-group">
        @Html.LabelFor(model => model.Employeeinfo.EmployeeName)
        @Html.EditorFor(model => model.Employeeinfo.EmployeeName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.Employeeinfo.EmployeeName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AttendanceDate)
        @Html.EditorFor(model => model.AttendanceDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AttendanceDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Timestamp)
        @Html.EditorFor(model => model.Timestamp, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Timestamp, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EntryType)
        @Html.EditorFor(model => model.EntryType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EntryType, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "AttendanceReport", new { employeeId = Model.EmployeeId }, new { @class = "btn btn-secondary" })
}
